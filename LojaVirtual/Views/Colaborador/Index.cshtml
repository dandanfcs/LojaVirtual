@using LojaDeMateriais.Models
@model LojaDeMateriais.Models.Colaborador
@{
    ViewData["Title"] = "View";
}

<section class="mt-3">
  <div class="container-fluid ">
    <div class="row">
      <div class="col-sm-6 text-black align-content-center justify-content-lg-center">

        <div class="d-flex align-items-center ">

          <form style="width: 23rem;" method="post">

            <div class="form-outline mb-4">
                <input asp-for="Email" type="text" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-outline mb-4">
                <input asp-for="Senha" type="password" class="form-control" placeholder="Senha"/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="pt-1 mb-4">
              <button
                asp-controller="Colaborador"
                asp-action="Login"
                      class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
            </div>

          

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="https://i.imgur.com/HV6ZHX5.jpg" title="source: imgur.com" alt="Login image"  style="object-fit: cover; width: 80%; object-position: left;">
      </div>
    </div>
  </div>
</section>

<style>
    .bg-image-vertical {
  position: relative;
  overflow: hidden;
  background-repeat: no-repeat;
  background-position: right center;
  background-size: auto 100%;
}

</style>