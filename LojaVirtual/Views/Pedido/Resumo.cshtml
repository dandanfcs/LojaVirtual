@using LojaVirtual.Areas.Catalogo.Models;
@using LojaDeMateriais.Models
@model CarrinhoViewModel
@{
    ViewData["Title"] = "Resumo do Pedido";
    var ResumoDoPedido = ViewData["ResumoDoPedido"] as CarrinhoViewModel;
    var produtos = ViewData["Produtos"] as List<Produto>;

}

<div>
    <h1>Itens Pedidos</h1>
    <div class="row rounded bg-white p-3 w-100 shadow-lg">

        <div class="row flex justify-content-between w-100 align-items-start">
            <div class="col p-3">
                @foreach (var prod in produtos)
                {
                    <div class="row border-bottom">
                        <div class="col">
                            <img src="https://i.imgur.com/A0A4T87.png" title="source: imgur.com" />
                        </div>

                        <div class="col">

                            <div class="p-2 ">
                                <span>@prod.Nome</span> <br />
                                <span class="texto">Preço: R$@prod.Preco </span><br />
                                <span class="texto">Quantidade: @prod.Quantidade</span><br />
                                <span class="texto">Total: @(prod.Quantidade * prod.Preco)</span>
                            </div>

                        </div>
                    </div>
                }
            </div>

            <div class="col p-2">
                <div class="shadow border rounded p-3">
                    <div class="bg-dark text-white p-1 rounded">Resumo do Pedido:</div>
                    <div class="mt-1 border-bottom">
                        <div> <span><bold>Rua: </bold>Mangabeiras</span> </div>
                        <div> <span><bold>Bairro: </bold>Centro</span> </div>
                        <div> <span><bold>Número: </bold>376</span> </div>
                        <div> <span><bold>Cidade: </bold>Diamantina-Mg</span> </div>
                        <div> <span><bold>CEP: </bold>39100-000</span> </div>
                    </div>

                    <div class=" mt-2"><span>Valor Total: R$@(ResumoDoPedido.ValorTotal),00</span></div>

                </div>
            </div>

        </div>




    </div>

</div>

<style>
    .texto {
        font-family: monospace;
    }
</style>
