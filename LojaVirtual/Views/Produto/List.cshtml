@using LojaDeMateriais.Models
@model List<Produto>;

@{
    ViewData["Title"] = "Produtos";
}


<h4>Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-12">

        <div class="container">
            <div>
                @foreach (var produto in Model)
                {
                    <div class="row align-items-lg-center border bg-white">



                        <div class="col-4">
                            <img src="https://i.imgur.com/A0A4T87.png" class="" />
                        </div>

                        <div class="col-8 mb-4">
                            <div scope="row">@produto.Nome</div>
                            <div>R$@produto.Preco,00</div>
                            <div>
                                <a class="btn btn-dark lg w-50"
                                   asp-controller="Venda"
                                   asp-action="RealizarVenda"
                                   asp-route-id="@produto.Id">Adicionar ao carrinho</a>
                            </div>
                        </div>
                    </div>
                }
            <a class="btn btn-dark lg w-50"
               asp-controller="Venda"
               asp-action="FinalizarVenda">Finalizar Venda</a>

            </div>
        </div>
       
    </div>
</div>

<div>
    <a 
       asp-controller="Produto"
       asp-action="Criar">
    Cadastrar Produto</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
