@using LojaDeMateriais.Models
@model List<Produto>;

@{
    ViewData["Title"] = "Produtos";
}


<h4>Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-12">

        <div class="container">
            <div>
                <div class="row align-items-center bg-white">
                   
                    @foreach (var produto in Model)
                    {
                        <div class="col-4 border-bottom border-right p-2 ">
                            <div>
                                <img src="https://i.imgur.com/A0A4T87.png" class="" />
                            </div>

                            <div class="mb-4">
                                <div scope="row">@produto.Nome</div>
                                <div>R$@produto.Preco,00</div>
                            </div>
                            
                            <div> 
                            <button class="btn btn-dark lg w-50" >Comprar</button> 
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
       
    </div>
</div>

<div>
    <a 
       asp-controller="Produto"
       asp-action="Criar">
    Cadastrar Produto</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
